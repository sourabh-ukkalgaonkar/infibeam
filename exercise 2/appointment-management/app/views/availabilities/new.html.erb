        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group controls' style="position: relative">
    <%= f.label :start_date %>
    <%= f.text_field :start_date %>
  </div>

  <div class='form-group controls' style="position: relative">
    <%= f.label :end_date %>
    <%= f.text_field :end_date %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

